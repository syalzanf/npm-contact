<%- include ('layout/header') %>
<%- include ('layout/nav') %>

<style>
    /* Reset some default styles */
    body, ul {
        margin: 0;
        padding: 0;
    }

    /* Basic styling for the layout */
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        font-family: Arial, sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center; /* Mengatur konten ke tengah secara horizontal */
    }

    /* Styling for the contact table */
    .contact-table {
        width: 80%;
        border-collapse: collapse;
        margin: 0 auto; /* Mengatur tabel agar berada di tengah secara horizontal */
        margin-top: 40px;
    }

    .contact-table th, .contact-table td {
        border: 1px solid #ccc;
        padding: 10px;
        text-align: left;
    }

    /* Styling for buttons */
    .button-link {
        display: inline-block;
        padding: 5px 10px;
        background-color: #008e9b;
        color: white;
        border: none;
        text-decoration: none;
        border-radius: 3px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .button-link:hover {
        background-color: #0490e7;
    }

      /* Styling for the Add New Contact button */
        .add-contact-button {
        margin-top: 20px;
        margin-right: 140px; /* Menambahkan margin ke kanan */
         /* Menggeser ke kanan */
        float: right; /* Menggeser ke kanan */
    }
</style>

<center><h2>All Contacts</h2></center>

<% if (cont.length < 1) { %>
    <p>contact data is empty</p>
<% } else { %>
    <!-- Server will render the view with data from the cont variable -->
    <table class="contact-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% cont.forEach(contact => { %>
                <tr>
                    <td><%= contact.name %></td>
                    <td><%= contact.hp %></td>
                    <td>
                        <a href="/detail-contact/<%= contact.name %>" class="button-link">Detail</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } %>
<a href="/contact/add" class="button-link add-contact-button">Add New Contact</a>

<%- include ('layout/footer') %>
